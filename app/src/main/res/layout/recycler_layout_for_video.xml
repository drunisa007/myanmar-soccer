<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="-1dp"
    android:foreground="@drawable/ripple"
    android:background="@drawable/ripple"
    android:id="@+id/cardViewbackground"
    android:clickable="true"
    app:cardCornerRadius="2dp"
    android:layout_marginBottom="3.5dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.041"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/thumbnailsimage"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintVertical_bias="0.478" />

        <TextView
            android:id="@+id/textgoalvideo"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Yadanarpone 4:5 Yangon United - highlight"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:layout_marginRight="16dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp" />

        <TextView
            android:id="@+id/textweekndate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dp"
            android:text="Week 17 Date 17/8/1999"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textgoalvideo"
            app:layout_constraintVertical_bias="0.88" />
    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>