<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bgg"
    android:layout_height="match_parent"
 >
<ImageView
    android:layout_width="120dp"
    android:layout_gravity="center"
    android:src="@drawable/designn"
    android:transitionName="mylogo"
    android:layout_marginTop="10dp"
    android:layout_height="120dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <android.support.design.widget.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/realusername"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/foredittext"
            android:backgroundTint="#fff"
            android:hint="Name"
            android:inputType="textEmailAddress"
            android:paddingLeft="8dp"
            android:textColor="#fff"
            android:textColorHighlight="#fff"
            android:textColorHint="#fff" />

        <android.support.design.widget.TextInputEditText
            android:id="@+id/signusername"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/foredittext"
            android:backgroundTint="#fff"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:paddingLeft="8dp"
            android:textColor="#fff"
            android:textColorHighlight="#fff"
            android:textColorHint="#fff" />

        <android.support.design.widget.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/foredittext"
            android:backgroundTint="#fff"
            android:hint="Password"
            android:id="@+id/signpassword"
            android:inputType="textVisiblePassword"
            android:paddingLeft="8dp"
            android:textColor="#fff"
            android:textColorHighlight="#fff"
            android:textColorHint="#fff" />

        <android.support.design.widget.TextInputEditText
            android:id="@+id/signpasswordretype"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/foredittext"
            android:backgroundTint="#fff"
            android:hint="Re-type Password"
            android:inputType="textVisiblePassword"
            android:paddingLeft="8dp"
            android:textColor="#fff"
            android:textColorHighlight="#fff"
            android:textColorHint="#fff" />

        <TextView
            android:id="@+id/signupbutton"
            android:layout_width="120dp"
            android:padding="11.5dp"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:text="Register"
            android:foreground="@drawable/ripplecolor"
            android:clickable="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/foret"
            android:layout_marginTop="22dp"
            android:textAlignment="center"
            android:textColor="#ffffff"
            android:textSize="16sp" />


    </LinearLayout>

</LinearLayout>
